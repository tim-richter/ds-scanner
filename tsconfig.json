{
  "compilerOptions": {
    "target": "ES2022",
    "allowJs": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "strictBindCallApply": true,
    "module": "ESNext",
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {},
    "declaration": true,
    "outDir": "dist-tsc",
    "esModuleInterop": true
  },
  "include": [
    "src/types/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.config.*"
  ],
  "exclude": [
    "node_modules",
    "src/features/ui"
  ]
}
