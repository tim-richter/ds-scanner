{
  "compilerOptions": {
    "target": "ES2022",
    "allowJs": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "strictBindCallApply": true,
    "module": "ESNext",
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {},
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "types": []
  },
  "include": [
    "src/types/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.config.*",
    "ui/**/*",
    "vitest.config.ts",
    "test/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
